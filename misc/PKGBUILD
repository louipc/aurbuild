pkgname=aurbuild
pkgver=1.8.10
pkgrel=1
pkgdesc="A utility to build and install packages from AUR."
url="http://aurbuild.berlios.de/"
license="GPL"
arch=(any)
depends=('python3' 'pacman>=3.1.0' 'fakeroot')
optdepends=('abs')

build() {
	cd $startdir/..
	python3 setup.py install --root=$pkgdir
}

